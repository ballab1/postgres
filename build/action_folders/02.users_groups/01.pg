#!/bin/bash

declare -A pg=(
     ['user']=${PG_USER:-postgres}
     ['uid']=${PG_UID:-$(postgres.UID)}
     ['group']=${PG_GROUP:-postgres}
     ['gid']=${PG_GID:-$(postgres.GID)}
     ['home']="${PGDATA:-/var/lib/postgresql/data}"
     ['shell']=/sbin/bash
)
: ${pg['uid']:=1002}
: ${pg['gid']:=1002}

