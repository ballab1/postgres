
declare -A pg=()

pg['user']=${pg_user:-postgres}
pg['uid']=${pg_uid:-$(getent passwd "${pg['user']}" | cut -d: -f3)}
pg['group']=${pg_group:-postgres}
pg['gid']=${pg_gid:-$(getent group "${pg['user']}" | cut -d: -f3)}
pg['home']="${PGDATA:-/var/lib/postgresql/data}"
pg['shell']=/sbin/bash

export PGDATA="${pg['home']}"
